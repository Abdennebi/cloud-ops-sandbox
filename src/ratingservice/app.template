runtime: python38
env: standard
service: ratings-service
entrypoint: uwsgi --http-socket :8080 --wsgi-file main.py --callable app --master --processes 1 --threads 10
env_variables:
    DB_HOST: '${DBHOST}'
    DB_NAME: '${DBNAME}'
    DB_USERNAME: '${DBUSER}'
    DB_PASSWORD: '${DBPWD}'
    MAX_DB_CONNECTIONS: 10
basic_scaling:
  max_instances: 10
  idle_timeout: 10m
